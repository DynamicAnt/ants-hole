{{#extend "stylesheets"}}
  <link rel="stylesheet" href="/stylesheets/blog/blog.css"/>
{{/extend}}

<div class="container">
  {{error}}
  <h2>Multer</h2>
  <div class="row">
  <h3>上传单文件</h3>
  <form action="/admin/file//upload_single" method="post" class="form-horizontal" enctype="multipart/form-data">
    <div class="form-group">
      <label for="title" class="col-sm-2 text-right">标题：</label>
      <div class="col-sm-10">
        <input type="file" name="txt" id="txt"  class="form-control"/>
      </div>
    </div>
    <div class="form-group">
      <div class="offset-2 col-sm-10">
        <button type="submit" class="btn btn-info">提交</button>
      </div>
    </div>
    </form>
  </div><!-- /.row -->

  <div class="row">
    <h3>上传单文件——仅允许上传图片</h3>
    <form action="/admin/file//upload_single2" method="post" class="form-horizontal" enctype="multipart/form-data">
      <div class="form-group">
        <label for="title" class="col-sm-2 text-right">标题：</label>
        <div class="col-sm-10">
          <input type="file" name="txt" id="txt"  class="form-control" accept="image/gif, image/jpeg"/>
        </div>
      </div>
      <div class="form-group">
        <div class="offset-2 col-sm-10">
          <button type="submit" class="btn btn-info">提交</button>
        </div>
      </div>
    </form>
  </div><!-- /.row -->

  <div class="row">
    <h3>上传单文件-diskStore</h3>
    <form action="/admin/file//upload_single2" method="post" class="form-horizontal" enctype="multipart/form-data">
      <div class="form-group">
        <label for="title" class="col-sm-2 text-right">标题：</label>
        <div class="col-sm-10">
          <input type="file" name="txt" id="txt"  class="form-control"/>
        </div>
      </div>
      <div class="form-group">
        <div class="offset-2 col-sm-10">
          <button type="submit" class="btn btn-info">提交</button>
        </div>
      </div>
    </form>
  </div><!-- /.row -->


</div>


